{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "inject",
            "type": "shell",
            "command": "debugcompiler.exe",
            "args": [
                "--build",
                "--noupdate",
                "'-Cdll.builtins=true'",
                "'-Cdll.detours=true'",
                "-DATIAN_MENU_DEV",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "echo": false,
                "clear": true,
                "focus": true,
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}